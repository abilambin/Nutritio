<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mealItemHourTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOUR"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mealItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mealItemPreparationTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrÃ©paration : " />

        <TextView
            android:id="@+id/mealItemPreparationTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mealItemCuissonTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuisson : "
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/mealItemCuissonTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>